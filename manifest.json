{
  "manifest_version": 3,
  "name": "Tab Video Auto Pause",
  "version": "1.1",
  "description": "Pause and resume video on tab switch with toggle.",
  "permissions": ["storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
